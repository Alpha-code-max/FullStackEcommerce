{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "isolatedModules": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["node_modules/*"]

        }
    }

}